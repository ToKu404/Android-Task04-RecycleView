<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_shape_detail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="1dp"
        android:layout_marginTop="180dp"
        />
    <FrameLayout
        android:id="@+id/iv_banner_container"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">
        <com.flaviofaria.kenburnsview.KenBurnsView
            android:id="@+id/iv_banner"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_front"/>

    </FrameLayout>
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@null"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:onClick="back"
        android:backgroundTint="#39000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/iv_poster_container"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="4dp">
        <ImageView
            android:id="@+id/iv_poster"
            android:layout_height="140dp"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title Komik"
        android:fontFamily="@font/lato_bold"
        android:elevation="2dp"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@id/iv_poster_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genre Komik"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_tipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="tipe"
        app:layout_constraintTop_toBottomOf="@id/tv_genre"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/tv_tipe"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="Sinopsis"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_sinopsis"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="sinopsis text"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_map"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:layout_marginLeft="16dp"
            app:backgroundTint="#EBEBEB"
            android:textColor="#AEAEAE"
            android:text="Simpan"
            android:fontFamily="@font/lato_bold"
            android:textSize="14dp"
            app:icon="@drawable/ic_baseline_bookmark_24"
            app:iconTint="#AEAEAE"
            android:layout_weight="1"
            app:elevation="4dp"
            app:iconGravity="textStart" />
        <Space
            android:layout_width="24dp"
            android:layout_height="match_parent" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            app:elevation="4dp"
            app:iconGravity="textStart"
            app:backgroundTint="#BD1829"
            android:textColor="@color/white"
            android:text="Baca"
            android:fontFamily="@font/lato_bold"
            android:textSize="14dp"
            />
    </TableRow>
</androidx.constraintlayout.widget.ConstraintLayout>